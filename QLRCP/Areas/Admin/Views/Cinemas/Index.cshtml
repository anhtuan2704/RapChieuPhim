@model IEnumerable<QLRCP.Models.CinemaEtites.Cinema>

@{
    ViewBag.Title = "Cụm Rạp Phim";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Rạp Phim</h2>

<p>
    @Html.ActionLink("Tạo Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discriptiion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discriptiion)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.Id }) |
            @Html.ActionLink("Xoá", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
